{
  "name": "bach-hoa-backend",
  "version": "1.0.0",
  "description": "Backend API for Bach Hoa grocery store",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "seed": "node src/database/seeders/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node src/database/migrate.js",
    "migrate:reset": "node src/database/migrate.js --reset",
    "db:init": "node scripts/db-setup.js init",
    "db:seed": "node scripts/db-setup.js seed",
    "db:reset": "node scripts/db-setup.js reset",
    "db:setup": "node scripts/db-setup.js setup",
    "db:help": "node scripts/db-setup.js help"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "jwt",
    "socket.io"
  ],
  "author": "Bach Hoa Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.1",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "xlsx": "^0.18.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/seeders/**",
      "!src/database/migrations/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
